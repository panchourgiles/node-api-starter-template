{
  "name": "node-api-starter-template",
  "version": "1.0.0",
  "description": "",
  "keywords": [],
  "author": "",
  "license": "ISC",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn -r tsconfig-paths/register src/index.ts",
    "build": "rimraf ./build && tsc",
    "start": "yarn run build && node ./build/index.js",
    "lint": "eslint --ignore-path .gitignore --ext .ts .",
    "lint:fix": "yarn run lint --fix",
    "prettier": " prettier --ignore-path .gitignore --config .prettierrc --write 'src/*.+(ts|json)'"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "joi": "^17.3.0",
    "module-alias": "^2.2.2",
    "mongodb": "^3.6.2",
    "mongoose": "5.10.11",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.9",
    "@types/joi": "^14.3.4",
    "@types/mongoose": "5.10.3",
    "@types/node": "^14.14.16",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "ts-node-dev": "^1.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.3"
  },
  "_moduleAliases": {
    "@components": "build/components",
    "@config": "build/config",
    "@loaders": "build/loaders",
    "@network": "build/network",
    "@utils": "build/utils"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/*.+(ts)": [
      "yarn run lint"
    ],
    "src/*.+(ts|json)": [
      "yarn run prettier"
    ]
  }
}
